@page
@model Bookstore_Razor.Pages.Categories.EditModel

<form method="post">
    <input asp-for="Category.CID" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
            <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-10 text-end">
                <button type="submit" class="btn btn-primary" style="width:200px">Save Changes</button>
            </div>
            <div class="col-2">
                <a asp-page="/categories/index" class="btn btn-outline-primary" style="width:200px">Back To List</a>
            </div>
        </div>

    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}