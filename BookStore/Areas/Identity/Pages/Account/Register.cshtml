@page
@model RegisterModel

<div class="card shdaow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="text-center col-12">
                <h2 class="py-2 text-white">Register</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-2 pb-2">
            <div class="col-md-12">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row">
                    <h3 class="border-bottom mb-4 text-secondary text-center">Create a new account.</h3>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3 col-12">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-muted ms-2">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Full Name" />
                        <label asp-for="Input.Name" class="text-muted ms-2">Full Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="PhoneNumber" />
                        <label asp-for="Input.PhoneNumber" class="text-muted ms-2">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="text-muted ms-2">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="text-muted ms-2">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.State" class="form-control" aria-required="true" placeholder="State" />
                        <label asp-for="Input.State" class="text-muted ms-2">State</label>
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="City" />
                        <label asp-for="Input.City" class="text-muted ms-2">City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.StreetAddress" class="form-control" aria-required="true" placeholder="StreetAddress" />
                        <label asp-for="Input.StreetAddress" class="text-muted ms-2">Street Address</label>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder="PostalCode" />
                        <label asp-for="Input.PostalCode" class="text-muted ms-2">Postal Code</label>
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                            <option value="" disabled selected>- Select Role -</option>
                        </select>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </div>
                </form>
            </div>
            <div class="col-12">
                <section>
                     @* Divider text *@
                    <div class="d-flex align-items-center my-3">
                        <hr class="flex-grow-1">
                        <span class="px-2 text-muted">or</span>
                        <hr class="flex-grow-1">
                    </div>
                    <div class="col-12">
                        <a class="w-100 btn btn-lg btn-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
    
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
