@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" disabled/>
        </div>
        <div class="row">
            <div class="col-10 text-end">
                <button type="submit" class="btn btn-danger" style="width:200px">Delete</button>
            </div>
            <div class="col-2">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary" style="width:200px">Back To List</a>
            </div>
        </div>

    </div>
</form>

